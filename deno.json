{
	"version": "0.1.5",
	"exports": "./mod.ts",
	"name": "@lukeed/fetch-event-stream",
	"tasks": {
		"build": "deno run -A scripts/build.ts",
		"publish": "deno run -A scripts/publish.ts",
		"gzip": "deno run -A scripts/gzip.ts"
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.41.0",
		"@std/assert": "jsr:@std/assert@^0.221.0",
		"@std/http": "jsr:@std/http@^0.221.0",
		"@std/path": "jsr:@std/path@^0.221.0",
		"@std/streams": "jsr:@std/streams@^0.221.0"
	},
	"lint": {
		"rules": {
			"exclude": [
				"prefer-const",
				"no-cond-assign",
				"no-import-prefix",
				"no-inner-declarations",
				"no-var"
			]
		}
	},
	"nodeModulesDir": "auto",
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": [
		"npm"
	]
}
