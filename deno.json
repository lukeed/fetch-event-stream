{
	"tasks": {
		"build": "deno run -A scripts/build.ts",
		"publish": "deno run -A scripts/publish.ts"
	},
	"imports": {
		"std/": "https://deno.land/std@0.220.1/"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-var",
				"prefer-const",
				"no-cond-assign",
				"no-inner-declarations"
			]
		}
	},
	"fmt": {
		"lineWidth": 100,
		"singleQuote": true,
		"useTabs": true
	},
	"exclude": ["npm"]
}
